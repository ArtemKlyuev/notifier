{
  "name": "@notifier/monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "add:root": "yarn add -W -D -E",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --quiet",
    "lint:fix": "yarn lint:js --fix --no-error-on-unmatched-pattern",
    "cm": "./node_modules/cz-customizable/standalone.js",
    "prepare": "husky install",
    "package:core": "yarn workspace @notifier/core",
    "package:react": "yarn workspace @notifier/react"
  },
  "devDependencies": {
    "@types/node": "16.11.58",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "cz-customizable": "7.0.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.8",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.1",
    "lerna": "5.5.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.2"
  }
}
