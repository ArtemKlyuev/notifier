{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/__mocks__/**"],
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
